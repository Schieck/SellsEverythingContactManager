@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-md-offset-3 col-md-10">
    <div style="width: inherit" class="mdl-card mdl-shadow--2dp">
        <section>
            <h4 style="margin-left:3%">Create a new Seller account</h4>
            <hr />
            <form asp-route-returnUrl="@Model.ReturnUrl" class="text-center" method="post">
                <div class="mdl-textfield mdl-js-textfield">
                    <label asp-for="Input.Email" class="mdl-textfield__label"></label>
                    <input asp-for="Input.Email" class="mdl-textfield__input" />
                </div>
                <br />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <div class="mdl-textfield mdl-js-textfield">
                    <label asp-for="Input.Password" class="mdl-textfield__label"></label>
                    <input asp-for="Input.Password" class="mdl-textfield__input" />
                </div>
                <br />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="mdl-textfield mdl-js-textfield">
                    <label asp-for="Input.ConfirmPassword" class="mdl-textfield__label"></label>
                    <input asp-for="Input.ConfirmPassword" class="mdl-textfield__input" />
                </div>
                <br />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <button type="submit" class="mdl-button mdl-js-button mdl-button--primary">Register</button>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
