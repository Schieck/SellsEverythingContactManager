@model SEContactManager.ApplicationCore.Entity.Customer

@{
    ViewData["Title"] = "Details";
}

<div style="width:100%; height:100%; padding:15pt;" class="col-md-12">
    <div style="width: inherit; padding:15pt;" class="mdl-card mdl-shadow--2dp">
        <h2>Contact Details</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.LastPurchase)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LastPurchase)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Classification)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Classification)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored"><i class="material-icons">edit</a>
            <a asp-action="Index" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored"><i class="material-icons">undo</a>
        </div>
    </div>
</div>